<style>
    .form-container {
        max-width: 600px;
        margin: 30px auto;
        padding: 20px;
        background-color: #fff;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        border-radius: 8px;
    }

    .btn {
        margin: 5px 0 5px 241.4px;
    }

    label {
        margin: 10px 0;
    }
</style>
<div class="container form-container">
    <h2>Brand Form Edit</h2>
    <form id="brandForm" >
        <div class="form-group">
            <label for="brandName">brand Name:</label>
            <input id="brandId" type="hidden" value="<%= brand.id %>">
            <input type="text" value="<%= brand.name %>" class="form-control" id="brandName" name="brandName" required />
        </div>
        <div class="form-group">
            <label for="brandImage">brand Image:</label>
            <img src="<%= brand.image %>" height="200px" width="200px">
            <input type="file" class="form-control-file" id="brandImage" name="brandImage" accept="image/*" required />
        </div>
        <div class="form-group">
            <label for="brandInfo">brand Info:</label>
            <textarea class="form-control" id="brandInfo" name="brandInfo" rows="4" required><%= brand.info %></textarea>
        </div>
        <button onclick="submitBrandForm(event,'PUT')" class="btn btn-success">
            Submit
        </button>
    </form>
    </div>