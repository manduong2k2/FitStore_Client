<div class="container form-container">
  <h1>Lịch sử mua hàng</h1>
  <div class="form" style="display: flex">
    <div id="product-info">
      <table class="table">
        <thead>
          <tr>
            <th>Mã đơn hàng &#127380;</th>
            <th>Ngày đặt hàng &#128340;</th>
            <th>Tổng tiền &#128184;</th>
            <th>Chi tiết &#9432;</th>
          </tr>
        </thead>
        <tbody>
          <% data.forEach(item => { %>
          <tr class="productItem">
            <td><%=item.id%></td>
            <td><%=item.date%></td>
            <td><%=item.total.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")%> <span>₫</span></td>
            <td>
              <table class="table">
                <thead>
                  <tr>
                    <th>Tên sản phẩm</th>
                    <th>Hình</th>
                    <th>Đơn giá</th>
                    <th>Số lượng</th>
                    <th>Tổng</th>
                    <th>Đánh giá</th>
                  </tr>
                </thead>
                <tbody>
                  <% item.Items.forEach(it => { %>
                  <tr>
                    <td><img src="<%=it.product.image%>" style="height: 100px" alt="" /></td>
                    <td><%=it.product.name%></td>
                    <td><%=it.product.price.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")%><span>₫</span></td>
                    <td><%=it.quantity%></td>
                    <td><%=it.cost.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ".")%><span>₫</span></td>
                    <td><%=it.rating%></td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </td>
          </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
  </div>
</div>
