<div id="popupForm" class="popup text-white">
  <h2>Đăng bài</h2>
  <span class="close-icon" onclick="closeCreatePopup()">X</span>
  <form id="blogForm">
    <!-- account id lấy tù cokkie, bỏ vào 1 cái input type hidden -->
    <input type="hidden" id="" name="authorId" value="" />

    <div class="form-group">
      <label for="articleTitle">Tiêu đề bài viết:</label>
      <input
        type="text"
        class="form-control"
        id="blogTitle"
        name="blogTitle"
        required
      />
    </div>

    <div class="form-group">
      <label for="articleImage">Thêm hình cho bài viết:</label>
      <input
        type="file"
        class="form-control-file"
        id="blogImage"
        name="blogImage"
        accept="image/*"
        required
      />
    </div>

    <button
      type="button"
      onclick=""
      class="btn btn-success"
      style="margin-left: 180.4px"
    >
      Submit
    </button>
  </form>
</div>
