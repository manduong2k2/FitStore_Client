<div class="container form-container">
    <h1>Danh sách các Sản phẩm</h1>
    <a class="btn btn-success" onclick="showCreatePopup()">Thêm sản phẩm mới</a>
    <table class="table">
        <thead>
            <tr id="height-img">
                <th style="width: 5%; text-align: center">Id</th>
                <th style="width: 10%; text-align: center">Name</th>
                <th style="width: 5%; text-align: center">Category</th>
                <th style="width: 5%; text-align: center">Brand</th>
                <th style="width: 10%; text-align: center">Image</th>
                <th style="width: 5%; text-align: center">price</th>
                <th style="width: 5%; text-align: center">Quantity</th>
                <th style="width: 25%; text-align: center">Info</th>
                <th style="width: 20%; text-align: center">Danh mục</th>
            </tr>
        </thead>
        <tbody style="text-align: center">
            <% data.forEach(item=> { %>
                <tr>
                    <td>
                        <%= item.id %>
                    </td>
                    <td>
                        <%= item.name %>
                    </td>
                    <td>
                        <%= item.category.name %>
                    </td>
                    <td>
                        <%= item.brand.name %>
                    </td>
                    <td>
                        <img src="http://jul2nd.ddns.net/resource/products/<%= item.id %>/<%= item.id %>.jpg" alt="#" style="height: 100px; border-radius: 60px" />
                    </td>
                    <td>
                        <%= item.price %>
                    </td>
                    <td>
                        <%= item.stock %>
                    </td>
                    <td>
                        <%= item.info %>
                    </td>

                    <td colspan="2">
                        <a class="btn btn-primary" onclick="ProductEdit(<%= item.id %>)">Edit</a>
                        <a class="btn btn-danger" onclick="ProductDelete(<%= item.id %>)" >Delete</a>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</div>