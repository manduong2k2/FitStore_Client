<%- include('includes/head.ejs')%>

  <%- include('includes/navigation.ejs')%>
    <!-- Section: Design Block -->
    <section class="background-radial-gradient overflow-hidden">

      <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
        <div class="row gx-lg-5 align-items-center mb-5">
          <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
            <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
              Chào mừng bạn đến với <br />
              <span style="color: hsl(218, 81%, 75%)">FITNESS STORE</span>
            </h1>
            <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
              Fitness Store Nhà nhập khẩu và phân phối tư vấn dinh dưỡng thể
              hình, thể thao cao cấp chính hãng tại Việt Nam.
            </p>
          </div>

          <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
            <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
            <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

            <div class="card bg-glass">
              <div style="display: flex; flex-direction: column; justify-content: center;" class="card-body px-4 py-5 px-md-5">
                <form id="formEmail">
                  <h1 class="mb-3 h3 text-center">Quên mật khẩu</h1>
                  <!-- Email input -->
                  <div class="form-outline mb-4">
                    <input type="email" id="email" class="form-control" placeholder="Email" required />
                    <a id="emailMessage" style="color: red;"></a>
                  </div>
                </form>
                <form id="formCode" style="display: none;">
                  <h1 class="mb-3 h3 text-center">Nhập mã xác nhận</h1>
                  <div class="form-outline mb-4">
                    <input id="verifyCode" class="form-control" placeholder="Mã xác nhận" required />
                    <button class="btn btn-primary" onclick="SwitchToEmailForm(event)">Quay lại.</button> 
                    <a id="codeMessage" style="color: red;"></a>
                  </div>
                </form>
                <form id="formNewPassword" style="display: none;">
                  <h1 class="mb-3 h3 text-center">Nhập mật khẩu mới</h1>
                  <div class="form-outline mb-4">
                    <input id="newPassword" class="form-control" placeholder="Mật khẩu mới" required />
                    <a class="btn btn-danger" href="/signin">Huỷ bỏ</a> 
                    <a id="codeMessage" style="color: red;"></a>
                  </div>
                </form>
                <!-- Submit button -->
                <button id="submitEmail" onclick="SendEmail(event)" class="btn btn-primary"> Xác nhận email</button>
                <button style="display: none;" id="submitCode" onclick="VerifyCode(event)" class="btn btn-primary "> Xác nhận mã
                </button>
                <button style="display: none;" id="submitNewPassword" onclick="ChangePassword(event)" class="btn btn-primary "> Xác nhận mã
                </button>
                <div id="passwordError" style="color: red;"></div>
                <!-- Register buttons -->
                <div class="text-center">
                  <p> Bạn chưa có tài khoản? <a href="/signup">Đăng ký ngay.</a> </p>
                </div>
                <div class="text-center">
                  <p> <a href="/signin">Quay lại.</a> </p>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      </div>
    </section>
    <script src="/js/account/account.recover.js"></script>
    </div>

    <%- include('includes/footer.ejs')%>