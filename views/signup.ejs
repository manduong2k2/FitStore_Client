<%- include('includes/head.ejs')%>

  <body>
    <%- include('includes/navigation.ejs')%>
      <div id="root">
        <!-- Section: Design Block -->
        <section class="background-radial-gradient overflow-hidden">

          <div class="container px-4 py-5 px-md-5 text-center text-lg-start my-5">
            <div class="row gx-lg-5 align-items-center mb-5">
              <div class="col-lg-6 mb-5 mb-lg-0" style="z-index: 10">
                <h1 class="my-5 display-5 fw-bold ls-tight" style="color: hsl(218, 81%, 95%)">
                  Chào mừng bạn đến với <br />
                  <span style="color: hsl(218, 81%, 75%)">FITNESS STORE</span>
                </h1>
                <p class="mb-4 opacity-70" style="color: hsl(218, 81%, 85%)">
                  Fitness Store Nhà nhập khẩu và phân phối tư vấn dinh dưỡng thể
                  hình, thể thao cao cấp chính hãng tại Việt Nam.
                </p>
              </div>

              <div class="col-lg-6 mb-5 mb-lg-0 position-relative">
                <div id="radius-shape-1" class="position-absolute rounded-circle shadow-5-strong"></div>
                <div id="radius-shape-2" class="position-absolute shadow-5-strong"></div>

                <div class="card bg-glass">
                  <div style="display: flex; justify-content: center" class="card-body px-4 py-5 px-md-5">
                    <form id="form1">
                      <!-- 2 column grid layout with text inputs for the first and last names -->
                      <div class="row">
                        <h1 class="mb-3 h3 text-center">Đăng ký</h1>
                        <div class="col-md-12 mb-4">
                          <div class="form-outline">
                            <input type="text" name="accountName" id="accountName" class="form-control"
                              placeholder="Họ và tên" required />
                          </div>
                        </div>
                      </div>
                      <!-- Password input -->
                      <div class="form-outline mb-4">
                        <input type="email" name="accountEmail" id="accountEmail" class="form-control"
                          placeholder="Địa chỉ email" required />
                      </div>
                      <div class="form-outline mb-4">
                        <input type="text" class="form-control" id="accountPhone" name="accountPhone" placeholder="Số điện thoại" required />
                      </div>
                      <div class="form-outline mb-4">
                        <label style="color: white;" >Địa chỉ:</label>
                        <select class="form-control" id="provinces" onchange="fetchDistricts()">
                          <option>Chọn tỉnh/thành phố</option>
                        </select>
                      </div>
                      <div class="form-outline mb-4">
                        <select class="form-control" id="districts" onchange="fetchWards()">
                          <option>Chọn quận/huyện</option>
                        </select>
                      </div>
                      <div class="form-outline mb-4">
                        <select class="form-control" id="wards">
                          <option>Chọn phường xã</option>
                        </select>
                      </div>
                      <!-- Submit button -->
                      <button onclick="switchToForm2(event)" class="btn btn-primary btn-block mx-auto d-block mb-4">
                        Tiếp theo
                      </button>
                      <!-- Register buttons -->
                      <div class="text-center">
                        <p>Bạn đã có tài khoản?<a href="/signin">Đăng nhập.</a></p>
                      </div>
                    </form>
                    <form id="form2" style="display: none">
                      <div class="row">
                        <h1 class="mb-3 h3 text-center">Đăng ký</h1>
                        <div class="col-md-12 mb-4">
                          <div class="form-outline">
                            <input type="text" name="accountUsername" id="accountUsername" class="form-control"
                              placeholder="Username" required />
                          </div>
                        </div>
                      </div>
                      <div class="form-outline mb-4">
                        <input type="file" id="profileImage" name="accountImage" accept="image/*" class="form-control"
                          required />
                      </div>
                      <div class="form-outline mb-4">
                        <input type="password" name="accountPassword" id="accountPassword" class="form-control"
                          placeholder="Mật khẩu" required />
                      </div>

                      <div class="form-outline mb-4">
                        <input type="password" name="checkPassword" id="checkPassword" class="form-control"
                          placeholder="Nhập lạị mật khẩu" required />
                      </div>
                      <div style="display: flex; justify-content: space-between" class="form-outline mb-4">
                        <button onclick="switchToForm1(event)" class="btn btn-primary btn-block mx-auto d-block mb-4">
                          Quay lại
                        </button>
                        <button onclick="submitForm(event,'POST')" class="btn btn-primary btn-block mx-auto d-block mb-4">
                          Đăng ký
                        </button>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- Section: Design Block -->
        <script>
          document.addEventListener("DOMContentLoaded", function () {
            // Load dữ liệu tỉnh/thành phố khi trang được tải
            fetchProvinces();
          });
        </script>
        <script src="js/form.handle.js"></script>
        <script src="js/fetch.address.js"></script>
      </div>
      <%- include('includes/footer.ejs')%>
  </body>